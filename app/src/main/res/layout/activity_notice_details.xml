<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/table_row2_color"
    tools:context=".ui.noticeBoard.NoticeDetailsActivity">



    <ImageView
        android:src="@drawable/logo"
        android:rotationY="180"
        android:alpha=".1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/cvNotice"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/_12sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="1dp">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/tvReadMore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cvImage"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/tvPublishedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="मिति :- 2020-08-12"
                    android:textColor="@color/highlight_red"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNoticeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="अब घरमा बसी बसी अनलाइन पेमेन्ट मार्फत भुक्तानी"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/sample_image3" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tvNoticeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:autoLink="all"
                    android:text="पिठुवा खानेपानी तथा स उ संस्थाको खानेपानी महशुल अब घरमा बसी बसी अनलाइन पेमेन्ट मार्फत भुक्तानी गर्न सक्नुहुनेछ।अब हामी १,IME PAY (अाइएमी पे) २,KHALTI (खल्ती) अनलाइन पेमेन्टमा जोडिएका छौं।

पिठुवा खानेपानी तथा स उ संस्थाको खानेपानी महशुल अब घरमा बसी बसी अनलाइन पेमेन्ट मार्फत भुक्तानी गर्न सक्नुहुनेछ।अब हामी १,IME PAY (अाइएमी पे) २,KHALTI (खल्ती) अनलाइन पेमेन्टमा जोडिएका छौं।

पिठुवा खानेपानी तथा स उ संस्थाको खानेपानी महशुल अब घरमा बसी बसी अनलाइन पेमेन्ट मार्फत भुक्तानी गर्न सक्नुहुनेछ।अब हामी १,IME PAY (अाइएमी पे) २,KHALTI (खल्ती) अनलाइन पेमेन्टमा जोडिएका छौं।"
                    android:textColor="@color/sub_text_color"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


        </ScrollView>

    </com.google.android.material.card.MaterialCardView>


    <ImageView
        android:src="@drawable/ic_water_tap"
        android:rotationY="180"
        android:alpha=".15"
        app:layout_constraintEnd_toEndOf="@id/cvNotice"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="@id/cvNotice"/>
</androidx.constraintlayout.widget.ConstraintLayout>