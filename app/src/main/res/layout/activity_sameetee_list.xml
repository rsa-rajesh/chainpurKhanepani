<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sameetee.SameeteeListActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clEmptyList"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        android:elevation="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="पिठुवा खानेपानी संस्था- रत्ननगर"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCompanyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:text="कृपया तपाइँको दर्ता नम्बर थप्न को लागी 'नयाँ थप्नुहोस्' मा क्लिक गर्नुहोस्"
                    android:textColor="@color/sub_text_color"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvCompanyName" />
            </androidx.constraintlayout.widget.ConstraintLayout>




        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView

        android:text="Year: 2076"
        android:background="@drawable/bg_view"
        android:backgroundTint="@color/tiles_background_color"
        android:paddingHorizontal="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/_14sdp"
        android:drawableEnd="@drawable/ic_baseline_arrow_down"
        android:drawableTint="@color/primary_color"
        app:layout_constraintTop_toTopOf="@id/btMakePDF"
        app:layout_constraintBottom_toBottomOf="@id/btMakePDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        app:strokeColor="@color/colorGrey"
        android:id="@+id/btMakePDF"
        android:layout_width="wrap_content"
        style="?attr/materialButtonOutlinedStyle"
        android:text="PDF बनाउनुहोस्"
        app:icon="@drawable/ic_pdf_file"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btMakePDF"
        tools:itemCount="9"
        tools:listitem="@layout/item_member_list" />


</androidx.constraintlayout.widget.ConstraintLayout>