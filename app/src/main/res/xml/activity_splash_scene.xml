<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/ivLogo"
            app:layout_constraintBottom_toTopOf="@+id/ivLogoMid"
            android:layout_marginBottom="62dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/ivLogoBottom"
            app:layout_constraintTop_toBottomOf="@+id/ivLogoMid"
            android:layout_marginTop="62dp"
            app:transitionEasing="linear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="@dimen/_50sdp"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivLogoMid"
            android:translationX="-300dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline" />
        <Constraint
            android:id="@+id/ivLogoText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_60sdp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/ivLogo"
            app:layout_constraintBottom_toBottomOf="@+id/ivLogoMid"
            android:layout_marginBottom="58dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/ivLogoBottom"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="@id/ivLogoMid"
            app:layout_constraintTop_toTopOf="@id/ivLogoMid"
            android:layout_marginTop="110dp"
            app:transitionEasing="linear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <Transition
        app:duration="1200"
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:autoTransition="animateToEnd">
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/ivLogo"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/ivLogo"
                app:framePosition="100"
                android:alpha="1" />

            <KeyAttribute
                app:motionTarget="@+id/ivLogoBottom"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/ivLogoBottom"
                app:framePosition="100"
                android:alpha="1" />


        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/end_c" >
        <Constraint
            android:layout_width="wrap_content"
            android:id="@+id/ivLogo"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="@+id/ivLogoMid"
            android:layout_marginBottom="58dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_width="wrap_content"
            android:id="@+id/ivLogoBottom"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="@id/ivLogoMid"
            app:layout_constraintTop_toTopOf="@id/ivLogoMid"
            app:transitionEasing="cubic(0.2,0.2,0.44,1)"
            android:layout_marginTop="110dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/ivLogoText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_60sdp"
            android:alpha="1" />
    </ConstraintSet>
    <Transition
        app:duration="1200"
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end_c"
        app:autoTransition="animateToEnd" />
</MotionScene>
